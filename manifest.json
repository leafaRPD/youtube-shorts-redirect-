{
  "manifest_version": 3,
  "name": "YouTube Shorts Redirect",
  "version": "1.0",
  "description": "Automatically redirects YouTube Shorts to the regular watch page.",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
